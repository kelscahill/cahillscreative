{% if textarea %}
  {% set base_class = textarea.base_class|default('o-form-item') %}

  <div class="{{ bem_classes(base_class) }}">
    {% if textarea.label %}
      <label class="{{ bem_classes(base_class, 'label') }}" for="{{ textarea.id }}">{{ textarea.label }}</label>
    {% endif %}
    <textarea id="{{ textarea.id }}" class="{{ bem_classes(base_class, 'textarea') }}"></textarea>
  </div>
{% endif %}
