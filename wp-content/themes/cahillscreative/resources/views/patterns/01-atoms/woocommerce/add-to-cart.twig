{% set base_class = add_to_cart.base_class|default('o-add-to-cart') %}

{% if post._stock_status == 'instock' %}
  <form class="{{ bem_classes(base_class, add_to_cart.element, add_to_cart.modifiers, add_to_cart.extra) }}" action="{{ post.link|apply_filters('woocommerce_add_to_cart_form_action') }}" method="post" enctype="multipart/form-data">
    {% include "@atoms/buttons/button.twig" with {
      "button": {
        "text": "Add to Cart",
        "extra": bem_classes(base_class, 'button'),
        "attributes": {
          "type": "submit",
          "name": "add-to-cart",
          "value": post.id
        }
      }
    } %}
  </form>
{% endif %}
