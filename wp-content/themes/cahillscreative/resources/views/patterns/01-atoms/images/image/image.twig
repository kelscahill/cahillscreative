{% if image.src %}
  {% set base_class = image.base_class|default('o-image') %}

  <img class="{{ bem_classes(base_class, image.element, image.modifiers, image.extra) }}" loading="lazy"
    {% if image.srcset %}
      srcset="{{ image.srcset }}"
    {% endif %}
    {% if image.sizes %}
      sizes="{{ image.sizes }}"
    {% endif %}
    src="{{ image.src }}"
    alt="{{ image.alt ? image.alt : "Image" }}"
    {% if image.title %}
      title="{{ image.title }}"
    {% endif %}
    data-pin-media="{{ image.src|resize(1200, auto) }}"
    {% if post.link or post.affiliate_link %}
      data-pin-url="{{ post.affiliate_link ? post.affiliate_link : post.link }}"
    {% endif %}
    {% if yoast_meta_description %}
      data-pin-description="{{ yoast_meta_description }}"
    {% endif %}
  />
{% endif %}
