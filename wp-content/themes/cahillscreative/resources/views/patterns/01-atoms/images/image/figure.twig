{% if figure %}
  {% set base_class = figure.base_class|default('o-figure') %}

  <figure class="{{ bem_classes(base_class, figure.element, figure.modifiers, figure.extra) }}">
    {% if figure.image.description %}
      <div class="{{ bem_classes(base_class, 'description') }} u-space--bottom">
        <em class="o-small">(View)</em>
        <span class="o-kicker">{{ figure.image.description }}</span>
      </div>
    {% endif %}
    {% if figure.link.url %}
      <a class="{{ bem_classes(base_class, 'link', figure.link.modifiers, figure.link.extra) }}" href="{{ figure.link.url }}" aria-label="Image Link" {{ add_attributes(figure.link.attributes) }}>
    {% endif %}
      {% include "@atoms/images/image/responsive-image.twig" with figure %}
    {% if figure.link.url %}
      </a>
    {% endif %}
    {% if figure.image.caption %}
      <figcaption class="{{ bem_classes(base_class, 'caption') }} o-small u-space--half--top">{{ figure.image.caption }}</figcaption>
    {% endif %}
  </figure>
{% endif %}
