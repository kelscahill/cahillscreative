{% set base_class = featured_products.base_class|default('c-featured-products') %}

{% if featured_products is not empty  %}
  <section class="{{ bem_classes(base_class, featured_products.element, featured_products.modifiers, featured_products.extra) }} l-container--full u-background-color--tertiary">
    <div class="{{ bem_classes(base_class, 'wrap') }} l-wrap l-container--xxl u-spacing--double">
      {% include "@atoms/text/heading/heading.twig" with {
        "heading": {
          "level": "3",
          "size": "xl",
          "type": "primary",
          "text": featured_products.heading,
          "extra": bem_classes(base_class, 'header')
        }
      } %}
      <div class="{{ bem_classes(base_class, 'posts') }} js-slick-products">
        {% for post in featured_products.posts %}
          {% include "@molecules/cards/card-product.twig" with {
            "card": post
          } %}
          {% if loop.index % 4 == 0 %}
            <div class="c-card c-card--ad">
              {% include "@atoms/ads/ad.twig" with {
                "ad": {
                  "content": "<div id='ezoic-pub-ad-placeholder-158'></div>"
                }
              } %}
            </div>
          {% endif %}
        {% endfor %}
      </div>
    </div>
  </section>
{% endif %}
