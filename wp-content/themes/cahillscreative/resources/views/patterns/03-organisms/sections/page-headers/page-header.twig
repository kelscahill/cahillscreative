{% set base_class = page_header.base_class|default('c-page-header') %}

{% if page_header.heading or page_header.dek %}
  <div class="{{ bem_classes(base_class, page_header.element, page_header.modifiers, page_header.extra) }} l-container--m u-spacing--half">
    {% if page_header.icon.name or page_header.icon.image %}
      <div class="{{ bem_classes(base_class, 'icon') }} u-space--half--bottom">
        {% include "@atoms/images/icons/icon.twig" with {
          "icon": {
            "type": page_header.icon.type,
            "name": page_header.icon.name,
            "image": page_header.icon.image,
            "modifiers": "large"
          }
        } %}
      </div>
    {% endif %}
    {% include "@atoms/text/kicker/kicker.twig" with {
      "kicker": {
        "text": page_header.kicker,
        "extra": bem_classes(base_class, 'kicker')
      }
    } %}
    {% include "@atoms/text/heading/heading.twig" with {
      "heading": {
        "level": page_header.heading_level ? page_header.heading_level : "1",
        "size": page_header.heading_size ? page_header.heading_size : "xl",
        "type": "primary",
        "text": page_header.heading,
        "extra": bem_classes(base_class, 'heading')
      }
    } %}
    {% include "@atoms/text/dek/dek.twig" with {
      "dek": {
        "text": page_header.dek,
        "modifiers": "large",
        "extra": bem_classes(base_class, 'dek')
      }
    } %}
    {% include "@atoms/buttons/button.twig" with {
      "button": {
        "url": page_header.button.url,
        "text": page_header.button.text,
        "extra": [bem_classes(base_class, 'button'), "u-space--double--top"]
      }
    } %}
  </div>
{% endif %}