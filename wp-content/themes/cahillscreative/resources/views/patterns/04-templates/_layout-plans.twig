{% set base_class = 'l-main' %}

{% if layout.extra %}
  {% set layout_extra = [layout.extra]|merge(['']) %}
{% else %}
  {% set layout_extra = ['l-container--xxl'] %}
{% endif %}

{% if sidebar %}
  {% set layout_extra = layout_extra|merge(["has-sidebar"]) %}
{% endif %}

<!DOCTYPE html>
<html class="no-js no-svg" {{ site.language_attributes }}>
  {% include "@templates/_head.twig" %}
  <body class="body{{ ' ' ~ body_class ~ ' ' ~ body_extra_class }}">
    <a class="skip-link screen-reader-text visually-hidden" href="#content">Skip to content</a>
    {% include "@organisms/global/header/header-plans.twig" %}
    {% block sections_before %}{% endblock %}
    <main role="document" class="{{ bem_classes(base_class, layout.element, layout.modifiers, layout_extra) }}">
      {% block content %}{% endblock %}
      {% block sidebar %}{% endblock %}
    </main>
    {% block sections_after %}{% endblock %}
    {{ function('wp_footer') }}
  </body>
</html>