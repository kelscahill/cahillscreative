{% set stats_base_class = stats.base_class|default('c-stats') %}

{% if stats %}
  <div class="{{ bem_classes(stats_base_class, stats.element, stats.modifiers, stats.extra) }}">
    {% for tag in stats.project %}
      <div class="{{ bem_classes(stats_base_class, 'item') }}">
        {% include "@atoms/text/heading/heading.twig" with {
          "heading": {
            "level": "6",
            "size": "xs",
            "type": "secondary",
            "text": "Project",
            "extra": bem_classes(stats_base_class, 'heading')
          }
        } %}
        <div class="{{ bem_classes(stats_base_class, 'tags') }}">
          {{ tag.name }}
          {% if not loop.last %}
            <span>,&nbsp;</span>
          {% endif %}
        </div>
      </div>
    {% endfor %}
    {% for tag in stats.room %}
      <div class="{{ bem_classes(stats_base_class, 'item') }}">
        {% include "@atoms/text/heading/heading.twig" with {
          "heading": {
            "level": "6",
            "size": "xs",
            "type": "secondary",
            "text": "Room",
            "extra": bem_classes(stats_base_class, 'heading')
          }
        } %}
        <div class="{{ bem_classes(stats_base_class, 'tags') }}">
          {{ tag.name }}
          {% if not loop.last %}
            <span>,&nbsp;</span>
          {% endif %}
        </div>
      </div>
    {% endfor %}
    {% for tag in stats.cost %}
      <div class="{{ bem_classes(stats_base_class, 'item') }}">
        {% include "@atoms/text/heading/heading.twig" with {
          "heading": {
            "level": "6",
            "size": "xs",
            "type": "secondary",
            "text": "Cost",
            "extra": bem_classes(stats_base_class, 'heading')
          }
        } %}
        <div class="{{ bem_classes(stats_base_class, 'tags') }}">
          {{ tag.name }}
          {% if not loop.last %}
            <span>,&nbsp;</span>
          {% endif %}
        </div>
      </div>
    {% endfor %}
    {% for tag in stats.skill_level %}
      <div class="{{ bem_classes(stats_base_class, 'item') }}">
        {% include "@atoms/text/heading/heading.twig" with {
          "heading": {
            "level": "6",
            "size": "xs",
            "type": "secondary",
            "text": "Skill Level",
            "extra": bem_classes(stats_base_class, 'heading')
          }
        } %}
        <div class="{{ bem_classes(stats_base_class, 'tags') }}">
          {{ tag.name }}
          {% if not loop.last %}
            <span>,&nbsp;</span>
          {% endif %}
        </div>
      </div>
    {% endfor %}
  </div>
{% endif %}
