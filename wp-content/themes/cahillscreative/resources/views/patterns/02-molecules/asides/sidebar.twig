{% set base_class = sidebar.base_class|default('c-sidebar') %}

{% if sidebar %}
  {% spaceless %}
    <aside class="{{ bem_classes(base_class) }} u-spacing">
      {% if not sidebar.ad_only %}
        {% include "@molecules/components/social/social-share/social-share.twig" %}
        {% include "@atoms/text/meta/meta.twig" with {
          "meta": {
            "modifiers": "sidebar",
            "author": post.terms('byline'),
            "show_img": true
          }
        } %}
      {% endif %}
    </aside>
  {% endspaceless %}
{% endif %}
