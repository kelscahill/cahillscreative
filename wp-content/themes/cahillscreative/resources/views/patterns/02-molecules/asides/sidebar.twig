{% set sidebar_base_class = sidebar.base_class|default('c-sidebar') %}

{% if sidebar %}
  {% spaceless %}
    <aside class="{{ bem_classes(sidebar_base_class) }} u-spacing">
      {% if not sidebar.ad_only %}
        {% include "@molecules/components/social/social-share/social-share.twig" %}
        {% include "@atoms/text/meta/meta.twig" with {
          "meta": {
            "modifiers": "sidebar",
            "author": post.terms('byline'),
            "show_img": true
          }
        } %}
      {% endif %}
      {% include "@atoms/ads/ad.twig" with {
        "ad": {
          "size": "[300,600]",
          "size_map": "",
          "viewport": "",
          "scroll_load": true,
          "delay": true,
          "pos": "",
          "sticky": sidebar.ad_sticky ? true : false
        }
      } %}
    </aside>
  {% endspaceless %}
{% endif %}
