{% extends "@templates/_layout.twig" %}
{% set is_single = true %}

{% block sections_before %}
  {% do action('woocommerce_before_single_product') %}
{% endblock %}

{% block content %}
  {% include "03-organisms/content/content-single-product.twig" %}
{% endblock %}

{% block sections_after %}
  {% do action('woocommerce_after_single_product') %}
  {% include "@organisms/sections/feeds/featured-products.twig" with {
    "featured_products": {
      "heading": "Related products",
      "posts": related_products,
      "extra": "has-footer-overlay"
    }
  } %}
{% endblock %}
