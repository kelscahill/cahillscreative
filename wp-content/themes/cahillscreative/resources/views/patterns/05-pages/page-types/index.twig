{% extends "@templates/_layout.twig" %}

{% block content %}
  {% include "@organisms/content/content.twig" %}
{% endblock %}

{% block sections_after %}
  {% if post.meta('shortcodes') %}
    {% include "@organisms/sections/feeds/post-filter.twig" %}
  {% else %}
    {% include "@organisms/sections/feeds/post-grid.twig" with {
      "post_grid": {
        "posts": posts,
        "pagination": {
          "next": posts.pagination.next,
          "prev": posts.pagination.prev,
          "pages": posts.pagination.pages,
        }
      }
    } %}
  {% endif %}
  {% include "@atoms/ads/ad.twig" with {
    "ad": {
      "snippet": options.ad_bottom_of_page,
      "modifiers": "banner"
    }
  } %}
{% endblock %}
